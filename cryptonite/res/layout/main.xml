<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

  <TextView
      android:id="@+id/tvBrowse" 
      android:text="@string/browse_info"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:typeface="normal"
      android:textStyle="bold">
  </TextView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

    <Button
        android:id="@+id/btnDropbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/dropbox"
        android:typeface="normal" >

    </Button>

    <Button
        android:id="@+id/btnBrowse"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/browse"
        android:typeface="normal" >

    </Button>
  </LinearLayout>

  <TextView
      android:id="@+id/tvMountInfo" 
      android:text="@string/mount_info" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:typeface="normal"
      android:textStyle="bold">
  </TextView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

      <Button
          android:id="@+id/btnMount"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/mount"
          android:typeface="normal" >
      </Button>

      <Button
          android:id="@+id/btnUnmount"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/unmount"
          android:typeface="normal" >
      </Button>

      <Button
          android:id="@+id/btnViewMount"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/viewmount"
          android:typeface="normal" >
      </Button>
  </LinearLayout>

  <TextView
      android:id="@+id/tvVersion" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:typeface="normal"
      android:textStyle="bold">
  </TextView>


</LinearLayout>
